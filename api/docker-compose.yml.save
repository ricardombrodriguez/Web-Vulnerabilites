version: "3.1"
services:
  db:
    image: mysql:8.0
    command: --default-authentication-plugin=mysql_native_password
    ports:
      - "5000:5000"
    environment:
      MYSQL_DBHOST: spoton
      MYSQL_DBPORT: 5000
      MYSQL_DBUSER: root
      MYSQL_ROOT_PASSWORD: spoton  
    volumes:
      - datafiles:/var/lib/mysql
      - ./db/initdb.sql:/docker-entrypoint-initdb.d/initdb.sql
    restart: always

volumes:
  datafiles:
